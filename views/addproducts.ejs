<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Rubik:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="addproducts.css" />
    <title>Admin Products Page</title>
  </head>
  <body style="background-color: rgb(236, 236, 243)">
    <div class="logout-container">
      <form action="/logout?_method=DELETE" method="post">
        <button class="logout-btn btn-secondary" type="submit">Log Out</button>
      </form>
    </div>
    <div class="mainContainer">
      <div class="rows adminpanel">
        <div class="column">DASHBOARD</div>
        <div class="column">PRODUCTS</div>
        <div class="column">CATEGORIES</div>
        <div class="column">ORDERS</div>
        <div class="column">COUPONDS</div>
        <div class="column">CUSTOMERS</div>
      </div>

      <div class="container">
        <h1>Add New Product</h1>
        <form
          id="productForm"
          enctype="multipart/form-data"
          action="/add-product"
          method="post"
        >
          <div class="mb-3">
            <label for="productName" class="form-label">Product Name</label>
            <input
              type="text"
              class="form-control"
              id="productName"
              name="productName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="productCategory" class="form-label"
              >Product Category</label
            >
            <input
              type="text"
              class="form-control"
              id="productCategory"
              name="productCategory"
              required
            />
          </div>
          <div class="mb-3">
            <label for="productPrice" class="form-label">Product Price</label>
            <input
              type="number"
              class="form-control"
              id="productPrice"
              name="productPrice"
              required
            />
          </div>
          <div class="mb-3">
            <label for="productStock" class="form-label">Stock</label>
            <input
              type="number"
              class="form-control"
              id="productStock"
              name="productStock"
              required
            />
          </div>
          <input
            type="file"
            name="images[]"
            id="imageInput"
            multiple
            accept="image/*"
          />

          <!-- Display uploaded images here -->
          <!-- <div id="imagePreview" class="mb-3"> -->
          <!-- Display uploaded images here -->
          <!-- </div> -->
          <button class="add-btn" type="submit">f</button>
        </form>
      </div>
      <div>
        <% if (successMessage && successMessage.length > 0) { %>
        <p><%= successMessage[0] %></p>
        <% } %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>

    <script>
      const imageInput = document.getElementById("imageInput");
      const imagePreview = document.getElementById("imagePreview"); // Change this variable name

      imageInput.addEventListener("change", (event) => {
        const files = event.target.files;

        // Clear previous previews
        imagePreview.innerHTML = "";

        for (const file of files) {
          if (file.type.startsWith("image/")) {
            const img = document.createElement("img");
            img.src = URL.createObjectURL(file);
            img.alt = file.name;
            img.classList.add("preview-image");
            imagePreview.appendChild(img);
          }
        }
      });
    </script>
  </body>
</html>
